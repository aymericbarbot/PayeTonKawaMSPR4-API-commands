{
  "compilerOptions": {
    "target": "ES2020",                     // Version JS cible
    "module": "CommonJS",                   // Module system utilisé par Node.js
    "outDir": "./dist",                     // Dossier de sortie des fichiers compilés
    "rootDir": "./src",                     // Dossier racine des sources TS
    "strict": true,                        // Active les vérifications strictes
    "esModuleInterop": true,                // Permet l'import de modules CommonJS en style ES6
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                   // Inclure tous les fichiers TS dans src
  "exclude": ["node_modules", "dist"]       // Exclure ces dossiers
}
